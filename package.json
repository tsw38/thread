{
    "name": "thread",
    "version": "0.0.1",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development next dev -p 4450",
        "proxy": "PROXY=true yarn dev",
        "build": "NODE_ENV=production next build",
        "start": "next start -p 4450",
        "storybook": "start-storybook -p 4460",
        "build-storybook": "build-storybook",
        "cypress:open": "cypress open",
        "create-component": "node ./config/create-component",
        "bump-version": "node ./config/version-bump",
        "push": "git push origin master",
        "deploy": "git push production master",
        "test": "jest --collectCoverage",
        "test:watch": "jest --watch",
        "coverage:upload": "curl -s https://codecov.io/bash | bash -s - -f ./coverage/coverage-final.json",
        "coverage:clean": "sh-clean --src=.nyc_output,coverage",
        "coverage:merge": "nyc merge coverage .nyc_output/out.json",
        "coverage:report": "nyc report --reporter=html --reporter=lcov --reporter=text-summary",
        "ci:validate": "circleci config validate",
        "ci:tsconfig": "node ./config/tsconfig-for-test.js"
    },
    "dependencies": {
        "@babel/core": "^7.11.6",
        "@storybook/addon-controls": "^6.0.21",
        "@storybook/addon-essentials": "^6.0.21",
        "@storybook/addon-links": "^6.0.21",
        "@storybook/react": "^6.0.21",
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.0.4",
        "@types/jest": "^26.0.14",
        "@types/node": "^14.11.2",
        "@types/react": "^16.9.49",
        "@zeit/next-sass": "^1.0.1",
        "axios": "^0.20.0",
        "babel-loader": "^8.1.0",
        "classnames": "^2.2.6",
        "colors": "^1.4.0",
        "command-line-args": "^5.1.1",
        "cypress": "^5.2.0",
        "file-loader": "^6.1.0",
        "jest": "^26.4.2",
        "jest-chain": "^1.1.5",
        "jest-css-modules-transform": "^4.0.1",
        "jest-extended": "^0.11.5",
        "json-to-graphql-query": "^2.0.0",
        "mini-css-extract-plugin": "^0.11.2",
        "mkdirp": "^1.0.4",
        "next": "9.5.3",
        "next-http-proxy-middleware": "^1.0.4",
        "next-seo": "^4.7.3",
        "prettier": "^2.1.2",
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-is": "^16.13.1",
        "react-masonry-component": "^6.2.1",
        "sass": "^1.26.11",
        "sass-loader": "^10.0.2",
        "svg-path-parse": "^1.1.3",
        "ts-jest": "^26.4.0",
        "typescript": "^4.0.3"
    },
    "prettier": {
        "semi": false,
        "bracketSpacing": false,
        "endOfLine": "lf",
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5",
        "overrides": [
            {
                "files": "*.json",
                "options": {
                    "tabWidth": 2
                }
            },
            {
                "files": "*.scss",
                "options": {
                    "singleQuote": false
                }
            }
        ]
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "moduleNameMapper": {
            "\\.(css|less|s(c|a)ss)$": "<rootDir>/.jest/styleMock.js"
        },
        "testRegex": "(\\.(test|spec))\\.(ts|tsx|js)$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleDirectories": [
            "node_modules",
            "<rootDir>/src",
            "<rootDir>"
        ],
        "collectCoverageFrom": [
            "<rootDir>/src/**/*.{ts,tsx,js,jsx}",
            "!**/*.int.{spec,test}.{ts,tsx,js,jsx}",
            "!**/*.stories.{ts,tsx,js,jsx}",
            "!**/index.{ts,tsx}"
        ],
        "setupFilesAfterEnv": [
            "jest-extended",
            "jest-chain",
            "<rootDir>/.jest/setupAfterEnv.js"
        ]
    }
}
